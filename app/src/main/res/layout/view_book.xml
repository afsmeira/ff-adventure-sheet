<?xml version="1.0" encoding="utf-8"?>

<!-- TODO Consider using a card view instead - https://github.com/afsmeira/ff-adventure-sheet/issues/9 -->
<!-- TODO Parametrize constants -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/view_book_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:contentDescription="@string/view_book_cover"/>

    <TextView
        android:id="@+id/view_book_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/view_book_cover"
        android:background="#55000000"
        android:padding="5dp"
        android:textColor="@android:color/white"/>

</RelativeLayout>
